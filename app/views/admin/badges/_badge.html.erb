<tr>
  <td class="align-middle">
    <%= badge.name %>
  </td>
  <td >
    <%= image_tag badge.image, size: '50x50' %>
  </td>
  <td >
    <%= badge.rule %>
  </td>
  <td >
    <%= badge.option %>
  </td>
  <td >
    <%= link_to t('.edit'), edit_admin_badge_path(badge) %> |
    <%= link_to t('.show'), admin_badge_path(badge)%> |
    <%= link_to t('.delete'), admin_badge_path(badge),
                              method: :delete,
                              data: { confirm: t('.confirmation')} %>
  </td>
</tr>
