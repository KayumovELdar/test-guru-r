 <%if resource.present? && resource.errors.any? %>
  <%= content_tag :div, id: 'resource-errors', data: {resource_id:resource.id} do %>
    <h2><%= pluralize(resource.errors.count, 'error', locale: :en) %> detected:</h2>
    <ul>
      <% resource.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
<% end %>
